<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WindowStyle">
        <Setter Property="Control.Background" Value="White"/>
        <Setter Property="Control.Foreground" Value="Black"/>
    </Style>
    <Style x:Key="RadioBattonStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="RadioButton.Foreground" Value="Black"/>
    </Style>
    <Style x:Key="ToolBarStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Control.Background" Value="#FFEFEFEF"/>
    </Style>
    <Style x:Key="ImageStyle1" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Image.Source" Value="Data/BB.png"/>
    </Style>
    <Style x:Key="ImageStyle2" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Image.Source" Value="Data/II.png"/>
    </Style>
    <Style x:Key="ImageStyle3" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Image.Source" Value="Data/UU.png"/>
    </Style>
    <Style x:Key="ButtonStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Button.BorderBrush" Value="#FF7F7F7F"/>
        <Setter Property="Button.BorderThickness" Value="1"/>
    </Style>
    <Style x:Key="TextBoxStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="TextBox.Background" Value="#FFEFEFEF"/>
    </Style>
</ResourceDictionary>