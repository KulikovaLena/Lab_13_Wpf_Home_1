<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WindowStyle">
        <Setter Property="Control.Background" Value="Black"/>
        <Setter Property="Control.Foreground" Value="White"/>
    </Style>
    <Style x:Key="RadioBattonStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="RadioButton.Foreground" Value="White"/>
    </Style>
    <Style x:Key="ToolBarStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Control.Background" Value="#FF424242"/>
    </Style>
    <Style x:Key="ImageStyle1" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Image.Source" Value="Data/BB2.png"/>
    </Style>
    <Style x:Key="ImageStyle2" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Image.Source" Value="Data/II2.png"/>
    </Style>
    <Style x:Key="ImageStyle3" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Image.Source" Value="Data/UU2.png"/>
    </Style>
    <Style x:Key="ButtonStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Button.BorderBrush" Value="White"/>
        <Setter Property="Button.BorderThickness" Value="2"/>
    </Style>
    <Style x:Key="TextBoxStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="TextBox.Background" Value="#FF424242"/>
    </Style>
</ResourceDictionary>